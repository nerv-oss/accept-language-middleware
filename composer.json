{
    "name": "nerv-oss/accept-language-middleware",
    "description": "Laravel middleware, using the Accept-Language header for locale detection",
    "keywords": [
        "accept-language",
        "locales",
        "localization",
        "laravel",
        "laravel middleware"
    ],
    "homepage": "https://github.com/nerv-oss/accept-language-middleware",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Julius Dockwarder",
            "email": "julius.dockwarder@nerv.de",
            "role": "Developer"
        },
        {
            "name": "Orkhan Ahmadov",
            "email": "ahmadov90@gmail.com",
            "role": "Developer"
        }
    ],
    "extra": {
        "laravel": {
            "providers": [
                "Nerv\\AcceptLanguageMiddleware\\AcceptLanguageMiddlewareProvider"
            ]
        }
    },
    "require": {
        "php": "^8.0.2",
        "illuminate/contracts": "^8.0|^9.0|^10.0|^11.0",
        "illuminate/http": "^8.0|^9.0|^10.0|^11.0",
        "illuminate/support": "^8.0|^9.0|^10.0|^11.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0|^7.0|^8.0|^9.0",
        "phpunit/phpunit": "^9.0|^10.5"
    },
    "autoload": {
        "psr-4": {
            "Nerv\\AcceptLanguageMiddleware\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nerv\\AcceptLanguageMiddleware\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    }
}
